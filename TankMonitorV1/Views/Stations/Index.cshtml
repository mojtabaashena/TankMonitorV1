@model IEnumerable<TankMonitorV1.Models.Station>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
<div class="col-md-12">
    <div class="card">
        <div class="header">
            <h4 class="title">جایگاه</h4>
            <p class="category">لیست جایگاه ها</p>
        </div>
        <p>
            <a asp-action="Create">افزودن جایگاه جدید</a>
        </p>
        <button asp-action="Create" class="btn btn-info btn-fill pull-right">افزودن جایگاه جدید</button>
        <div class="content table-responsive table-full-width">

            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.GSID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.GSName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Location)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.GSID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GSName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">ویرایش</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">مشاهده</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">حذف</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>





